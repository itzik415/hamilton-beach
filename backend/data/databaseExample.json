CREATE TABLE products(
    id SERIAL PRIMARY KEY,
    type text NOT NULL,
    category text NOT NULL,
    price integer NOT NULL,
    lastprice integer NOT NULL,
    shortdescription text NOT NULL,
    mainimage text NOT NULL,
    model text NOT NULL
);

